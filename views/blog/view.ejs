<div class="header">
  <div class="navbar navbar-inverse navbar-fiexed-top">
    <div class="container">
      <h1 class="navbar-brand" style="color:#DBE8F9">My Blog</h1>
      <a class="button-link" href="/signout"> Signout</a>
    </div>
  </div>
</div> <br> <br>

<div class = "viewblog">

  <div class="link">
    <% Object.keys(blog).forEach(function(key) { %>
      <a class="button-link" href="/blog/<%=blog[key].id%>/edit"> revise</a>
    <% }); %>
  </div> <br>

  <div>
    <% Object.keys(blog).forEach(function(key) { %>
      <h1 align="center" class="navbar-brand" style="color:#466289"> <%= blog[key].title %> </h1>
    <%});%>
  </div>

  <div>
    <% Object.keys(blog).forEach(function(key) { %>
      <% var today = new Date(blog[key].updatedAt);%>
      <% var mm = today.getMonth() + 1;%>
      <% var dd = today.getDate()%>
      <% var yyyy = today.getFullYear();%>
      <%if (dd<10) {%>
        <%dd = '0' + dd;%>
      <%}%>
      <%if (mm<10) {%>
        <%mm = '0' + mm;%>
      <%}%>
      <%var today = mm + '/' + dd + '/' + yyyy;%>
      <%var time = new Date(blog[key].updatedAt);%>
      <%var hour = time.getHours();%>
      <%var min = time.getMinutes();%>
      <%var sec = time.getSeconds();%>
      <%var time = hour + ':' + min + ':' + sec; %>
      <p align="center" class="navbar-brand" style="color:#466289"> <%= today %>  <%= time %></p>
    <%});%>
  </div> <br> <br>

  <div>
    <% Object.keys(blog).forEach(function(key) { %>
      <p class = "space"> <%= blog[key].post %> </p>
    <% }); %>
  </div>

  <div class = "link">
      <a class="button-link" href="/blog">back</a>
  </div>
</div>